set tabstop=8 softtabstop=8 shiftwidth=8 noexpandtab
set t_Co=256
syntax on
"set background=dark
colorscheme monokai
let g:monokai_italic = 1

"make Ctrl+c  to line break in between opening and closing quotes or brackets
imap <NL> <CR><Esc>O

"map :tabp to F7 and :tabn to F8
imap <F7> <Esc>:tabp<CR>
imap <F8>  <Esc>:tabn<CR>
map <F7> :tabp<CR>
map <F8> :tabn<CR>

"turn on omni complition
filetype plugin on
set omnifunc=syntaxcomplete#Complete

set nocompatible              " be iMproved, required
filetype off                  " required


" set the runtime path to include Vundle and initialize
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()
" alternatively, pass a path where Vundle should install plugins
"call vundle#begin('~/some/path/here')

" let Vundle manage Vundle, required
Plugin 'gmarik/Vundle.vim'

" The following are examples of different formats supported.
" Keep Plugin commands between vundle#begin/end.

"javascript syntax plugin
Plugin 'jelera/vim-javascript-syntax'
Plugin 'pangloss/vim-javascript'
Plugin 'nathanaelkane/vim-indent-guides'
Plugin 'crusoexia/vim-javascript-lib'

"closing quotes and brackets
Plugin 'Raimondi/delimitMate'

"linter plugin
Plugin 'scrooloose/syntastic'

" This does what it says on the tin. It will check your file on open too, not
" just on save.
" You might not want this, so just leave it out if you don't.
let g:syntastic_check_on_open=1


"Code complition
Plugin 'Valloric/YouCompleteMe'

" These are the tweaks I apply to YCM's config, you don't need them but they
" might help.
" YCM gives you popups and splits by default that some people might not
" like, so these should tidy it up a bit for you.
let g:ycm_add_preview_to_completeopt=0
let g:ycm_confirm_extra_conf=0
set completeopt-=preview

" javascript complition for YouCompleteMe
Plugin 'marijnh/tern_for_vim'





" All of your Plugins must be added before the following line
call vundle#end()            " required
filetype plugin indent on    " required
" To ignore plugin indent changes, instead use:
"filetype plugin on
"
" Brief help
" :PluginList       - lists configured plugins
" :PluginInstall    - installs plugins; append `!` to update or just :PluginUpdate
" :PluginSearch foo - searches for foo; append `!` to refresh local cache
" :PluginClean      - confirms removal of unused plugins; append `!` to auto-approve removal
"
" see :h vundle for more details or wiki for FAQ
" Put your non-Plugin stuff after this line
